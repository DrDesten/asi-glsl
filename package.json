{
	"name": "asi-glsl",
	"displayName": "ASI for GLSL",
	"description": "Adds Automatic Semicolon Insertion to GLSL",
	"publisher": "DrDesten",
	"version": "1.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/DrDesten/asi-glsl.git"
	},
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Formatters"
	],
	"icon": "Icon.png",
	"keywords": [
		"asi",
		"automatic semicolon insertion"
	],
	"activationEvents": [
		"onLanguage:glsl"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [],
		"configuration": {
			"title": "ASI for GLSL",
			"properties": {
				"asi-glsl.addSemicolons": {
					"type": "boolean",
					"default": true,
					"description": "Extension adds semicolons when formatting"
				},
				"asi-glsl.addArgumentParentheses": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "Extension adds argument parentheses to `if` and `for` statements when formatting. Does not work for shorthand syntax."
				},
				"asi-glsl.lazyFor": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "Shorthand `for` syntax. Extension converts `for (int i < x) {` into `for (int i = 0; i < x; i++) {`. A type for the iterator can be specified, default is `int`."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}